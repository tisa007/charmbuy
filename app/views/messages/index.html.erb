<h1>Listing messages</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Reply</th>
    <th>Is visible</th>
    <th>Is readed</th>
    <th>Is replied</th>
    <th>Poster</th>
    <th>Replier</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @messages.each do |message| %>
  <tr>
    <td><%= message.body %></td>
    <td><%= message.reply %></td>
    <td><%= message.is_visible %></td>
    <td><%= message.is_readed %></td>
    <td><%= message.is_replied %></td>
    <td><%= message.poster %></td>
    <td><%= message.replier %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

